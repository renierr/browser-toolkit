{
  "name": "browser-toolkit",
  "description": "Collection of Tools in Browser only",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist node_modules/.vite",
    "prebuild": "npm run clean",
    "build": "tsc && vite build",
    "preview": "vite preview --port 5000",
    "build:preview": "npm run build && npm run preview",
    "format": "prettier --write \"src/**/*.{js,ts,html,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,html,css,json,md}\"",
    "pdfjs:update": "node scripts/setup-pdfjs.js"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "daisyui": "^5.5.14",
    "extract-zip": "^2.0.1",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0"
  },
  "license": "MIT",
  "dependencies": {
    "@cantoo/pdf-lib": "^2.5.3",
    "jspdf": "^3.0.4",
    "jszip": "^3.10.1",
    "lucide": "^0.561.0",
    "pdfjs-dist": "^5.4.449",
    "@embedpdf/snippet": "^2.1.0"
  }
}
